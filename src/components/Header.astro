---
import { Image } from 'astro:assets';
import logo from '../assets/logo_512x512.png';

interface Props {
  showBlogLink?: boolean;
}

const { showBlogLink = false } = Astro.props;
---

<header class="site-header">
  <div class="container" style="max-width: 56rem;">
    {showBlogLink && (
      <nav style="display: flex; justify-content: flex-end; margin-bottom: 2rem;">
        <a href="/blog" class="nav-link">Blog</a>
      </nav>
    )}
    <a href="/" style="text-decoration: none;">
      <Image
        width="150"
        height="150"
        src={logo}
        alt="Mwananchi Tech Seal"
        loading="eager" 
        fetchpriority="high" 
        class="site-logo"
      />
    </a>
    <h1 class="site-title">Mwananchi Tech</h1>
    <p class="site-tagline">
      Empowering Kenyan citizen with accessible parliamentary data and insights.
    </p>
  </div>
</header>
